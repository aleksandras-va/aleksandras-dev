---
import { Icon } from 'astro-icon/components';

import Link from './Link.astro';
---

<header class="flex w-full flex-col gap-3 md:gap-2 md:flex-row md:justify-between pb-5 md:pb-0">
  <a href="/" class="font-mono text-teal-950">aleksandras.dev</a>
  <nav class="text-sm flex gap-4 text-zinc-800">
    <Link href="/" text="home" />
    <Link href="/blog" text="blog" />
  </nav>
  <div class="flex gap-4 text-zinc-400 transition-colors">
    <a href="#" class="">
      <Icon name="mdi:github" size={28} class="text-teal-950 hover:text-teal-950" />
    </a>

    <a href="#" class="">
      <Icon name="mdi:instagram" size={28} class="text-teal-950 hover:text-teal-950" />
    </a>

    <a href="#" class="">
      <Icon name="mdi:linkedin" size={28} class="text-teal-950 hover:text-teal-950" />
    </a>
