---
import cx from 'classnames';

interface Props {
  href: string;
  text: string;
}

const { href, text } = Astro.props;
const currentPath = Astro.url.pathname;

const [, pathSegment] = currentPath.split('/');
const currentPage = `/${pathSegment}`;

const isActivePage = currentPage === href;
---

<a
  class={cx(
    'font-mono hover:text-teal-900 transition-colors',
    isActivePage && 'border-b-2 border-slate-900'
  )}
  href={href}>{text}</a
>
