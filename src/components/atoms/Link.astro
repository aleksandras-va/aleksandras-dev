---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
  href: string;
  class?: string;
}

const { href, class: classProp, ...restLinkProps } = Astro.props;
---

<a href={href} class:list={['text-teal-900 hover:text-teal-950', classProp]} {...restLinkProps}>
  <slot />
</a>
